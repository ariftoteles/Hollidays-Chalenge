<%- include('partials/header', {title: "Transfer"});-%>

<div class="border rounded shadow px-5 pt-3 pb-5 h-75">
  <h3>Transfer from: 
    <span class="font-weight-bold">
        <%= account.accountNumber%> <%= account.type%> <%= currencyFormat(account.balance)%>
    </span>
  </h3>
  <form action="/customers/<%= account.Customer.id%>/accounts/<%= account.id%>/transfer" method="POST">
    <div class="form-group">
      <div class="form-group">
        <label>Amount</label>
        <input type="number" class="form-control" name="amount" placeholder="0">
      </div>
      <label>Transfer To</label>
      <select class="form-control" name="idReceiver">
        <option value="" selected disabled>--Please Select Account--</option>
        <% allAccount.forEach(el => { %>
            <option value="<%= el.id%>"><%= el.accountNumber %> - <%= el.Customer.fullName %></option>
        <% }) %>
      </select>
    </div>
    <button type="submit" class="btn btn-primary w-100 mt-3">Transfer</button>
  </form>
</div>

<%- include('partials/footer');-%>