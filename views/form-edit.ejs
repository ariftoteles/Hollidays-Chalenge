<%- include('partials/header', {title: "Edit Profile"});-%>
<div class="border rounded shadow w-50 mx-auto m-3 p-5">
  <h3 class="text-center">Form Edit Profile</h3>
  <form action="/customers/<%= data.id %>/editProfile" method="POST">
    <div class="form-group">
      <label>Id Number</label>
      <input type="text" class="form-control" name="identityNumber" value="<%= data.identityNumber %>" >
    </div>
    <div class="form-group">
      <label>Full Name</label>
      <input type="text" class="form-control" name="fullName" value="<%= data.fullName %>">
    </div>
    <div class="form-group">
      <label>Address</label>
      <input type="text" class="form-control" name="address" value="<%= data.address %>">
    </div>
    <div class="form-group">
      <label>Birth Date</label>
      <input type="date" class="form-control" name="birthDate" value="<%= dateFormat(data.birthDate) %>">
    </div>
    <div class="form-group">
      <label>Gender</label>
      <div class="pl-3">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" id="male" value="male"
            <%= data.gender == 'male' ? 'checked' : '' %>>
          <label class="form-check-label" for="male">
            Male
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" id="female" value="female"
            <%= data.gender == 'female' ? 'checked' : '' %>>
          <label class="form-check-label" for="female">
            Female
          </label>
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-primary w-100">Save Edit</button>
  </form>
</div>


<%- include('partials/footer');-%>